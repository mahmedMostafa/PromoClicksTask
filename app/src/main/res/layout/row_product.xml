<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_image_view"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/bg_rounded_white"
            android:padding="@dimen/default_spacing_x0_8"
            android:src="@drawable/fake_product_image" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_spacing_x0_2"
            android:layout_marginBottom="@dimen/default_spacing_x0_2"
            android:textColor="@color/colorTextBlack"
            tools:text="Khaki Woman Coat" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/old_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#77838F"
                tools:text="$ 52.95" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/new_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_spacing_x0_8"
                android:textColor="@color/colorPrimary"
                tools:text="$35.00" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_duration_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_spacing_x0_2"
            android:layout_marginBottom="@dimen/default_spacing_x0_2"
            android:drawableStart="@drawable/ic_date"
            android:drawablePadding="@dimen/default_spacing_x0_8"
            android:textColor="@color/colorTextBlack"
            tools:text="End in 3 days" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>